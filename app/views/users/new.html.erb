<h1>Sign Up</h1>
<%= simple_form_for User.new do |f| %>
  <%= f.input :email, label: 'Your email please' %>
  <%= f.input :first_name, label: 'Your first name' %>
  <%= f.input :middle_name, label: 'Your middle name please' %>
  <%= f.input :last_name, label: 'Your last name please' %>
  <%= f.input :mobile_number, label: 'Your cell number please' %>
  <%= f.input :password, hint: 'No special characters.' %>
  <%= f.input :password_confirmation, hint: 'No special characters.' %>
  <%= f.button :submit, label: 'Sign Up'%>
<% end %>
